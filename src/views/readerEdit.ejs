<%- include('partials/header'); %>

<div>
    <h1>EDIT READERS</h1>
</div>


<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/reader/editReader/<%= data[0].id_reader %>" method="POST">
                        <div class="form-group p-2">
                            <input type="text" name="name_"  value="<%= data[0].name_ %>" class="form-control">
                        </div>
                        <div class="form-group p-2">
                            <input type="text" name="surname"  value="<%= data[0].surname %>" class="form-control">
                        </div>
                        <div class="form-group p-2">
                            <input type="text" name="Email"  value="<%= data[0].Email %>" class="form-control">
                        </div>
                        <div class="form-group p-2">
                            <input type="text" name="phoneNumber"  value="<%= data[0].PhoneNumber %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Edit Reader
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('partials/footer'); %>