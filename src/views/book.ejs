<%- include('partials/header'); %>


<div>
    <h1>BOOK'S LIST</h1>
</div>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>TITLE</th>
                        <th>AUTHOR</th>
                        <th>ISBN</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tboby>
                    <% if (data) { %>
                        <% for (var i=0; i < data.length; i++) { %>
                            <tr>
                                <td><%= data[i].id_book %></td>
                                <td><%= data[i].title %></td>
                                <td><%= data[i].author %></td>
                                <td><%= data[i].isbn %></td>
                                <td>
                                    <a href="/book/deleteBook/<%= data[i].id_book %>"  id="delete" class="btn btn-danger ">Delete</a>
                        
                                    <a href="/book/editBook/<%= data[i].id_book %>" class="btn btn-dark">Edit</a>

                                    <a href="/book/borrowBook/<%= data[i].id_book %>" class="btn btn-success">Borrow</a>

                                </td>
                            </tr>
                        <% } %>
                    <% } %>

                </tboby>
            </table>
        </div>

        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/book" method="POST">
                        <% if (locals.errors){
                            errors.forEach(error => { %>
                            <p><%= error.msg %> </p>
                        <%
                            })
                        } %>

                        <div class="form-group p-2">
                            <input type="text" name="title" placeholder="Title" value="<%= locals.old && old.title ? old.title : '' %>" autofocus class="form-control">
                        </div>

                        <div class="form-group p-2">
                            <input type="text" name="author" placeholder="Author" value="<%= locals.old && old.author ? old.author : '' %>"class="form-control">
                        </div>

                        <div class="form-group p-2">
                            <input type="text" name="isbn" placeholder="ISBN" value="<%= locals.old && old.isbn ? old.isbn : '' %>" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Save Book
                        </button>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('partials/footer'); %>
